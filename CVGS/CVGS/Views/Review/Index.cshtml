@model IEnumerable<CVGS.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            Comment
        </th>
        <th>
            Display Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.comment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.displayStatus)
        </td>
       
        <td>
            @Html.ActionLink("Change Status", "Edit", new { id=item.reviewID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.reviewID })
        </td>
    </tr>
}

</table>
